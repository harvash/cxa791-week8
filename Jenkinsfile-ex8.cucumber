pipeline {
  agent {
    kubernetes {
      yamlFile 'agents.yaml'
    }
  }
  stages {
    stage('Checkout SCM') {
      steps {
        git branch: env.BRANCH_NAME, url:'https://github.com/harvash/cxa791-week8.git'
      }
    }
    stage('Test code'){
      stages {
        stage ('Run tests for master branch') { 
          when { branch 'master' }
          steps { 
            container('gradle') {
              sh '''cd Chapter09/sample3
                    chmod +x gradlew      
                    ./gradlew acceptanceTest
                ''' 
              publishHTML (
                target: [
                  reportDir: 'Chapter09/sample3/build/reports/tests/acceptanceTest',
                  reportFiles: 'index.html',
                  reportName: 'Acceptance Testing'
                ]
              )
            }
          }
        }
      }
    }
  }
}